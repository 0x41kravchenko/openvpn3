#!/usr/bin/env bash
set -e

echo SWIG
swig -c++ -java -I$OVPN3_DIR/client -I$OVPN3_DIR ovpncli.i

echo JAVA
javac *.java

echo CORE
gcc -O3 -fPIC -pthread \
    -Wall -Wno-sign-compare -Wno-unused-parameter \
    -fvisibility=hidden \
    -DUSE_POLARSSL \
    -I$OVPN3_DIR/client \
    -I$OVPN3_DIR \
    -I$BOOST_DIR \
    -I$POLARSSL_DIR/include \
    -c $OVPN3_DIR/client/ovpncli.cpp

echo WRAP
gcc -Os -fPIC -pthread \
    -fno-strict-aliasing \
    -Wall \
    -fvisibility=hidden '-DSWIGEXPORT=__attribute__((visibility("default")))' \
    -I$OVPN3_DIR/client \
    -I$OVPN3_DIR \
    -I/usr/lib/jvm/java-7-openjdk-amd64/include \
    -L$BOOST_DIR/stage/lib \
    -L$POLARSSL_DIR/library \
    -L$OPENSSL_DIR/lib \
    ovpncli_wrap.cxx \
    ovpncli.o \
    -o libovpncli.so \
    -shared -Wl,-soname,libovpncli.so \
    -lpolarssl -lminicrypto \
    -lboost_system -lboost_thread

echo STRIP
strip libovpncli.so
