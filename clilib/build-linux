#!/usr/bin/env bash
set -e

g++ -O3 -fPIC -pthread \
    -Wall -Wno-sign-compare -Wno-unused-parameter \
    -fvisibility=hidden \
    -DUSE_OPENSSL \
    -I$O3/client \
    -I$O3 \
    -I$BOOST_DIR \
    -L$BOOST_DIR/stage/lib \
    $O3/client/ovpncli.cpp \
    -shared \
    -o libovpncli.so \
    -lcrypto -lssl \
    -lboost_system -lboost_thread

strip libovpncli.so
./make-dist dist-linux libovpncli.so
